START: init;
FROM: init;
assume(varC >= 1);
varR := 0;
varCS := 8;
TO: loc1;

FROM: loc1;
assume(varCS <= 0);
TO: loc2;

FROM: loc1;
assume(varCS > 0);
TO: loc3;

FROM: loc3;
assume(varC >= varCS);
varC := varC - 1;
varR := varR + 1;
varCS := varCS - 1;
TO: loc1;

FROM: loc3;
assume(varC < varCS);
varC := varC - 1;
varR := varR + 1;
varCS := varCS - 1;
TO: loc1;

FROM: loc3;
assume(varC < varCS);
varCS := varCS - 1;
TO: loc1;
